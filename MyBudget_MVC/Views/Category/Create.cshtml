@model Category


<div class="card shadow border-0 my-4 bg-secondary">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="row ">
                <div class="col-12">
                    <div class="p-3 ">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="Type" class="form-select border-0 py-0 shadow">
                                <option selected disabled>--Select Type--</option>
                                <option value="@SD.Category_Income">Income</option>
                                <option value="@SD.Category_Expense">Expense</option>
                            </select>
                            @*<label asp-for="Type" class="ms-2"></label> *@
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Icon" class="form-control border-0 shadow" />
                            <label asp-for="Icon" class="ms-2 text-dark">Icon</label>
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        @* <div asp-validation-summary=ModelOnly></div>*@
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control" asp-controller="Category" asp-action="Create">Create Category</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">&larr; Go Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}